<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context="com.dwakenya.techsavanna.newdwa.HASActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        app:titleTextColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:id="@+id/traininghor"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/images"
                    android:layout_height="50dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Training Program"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="normal"
                    android:textSize="15sp"  />

            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="12dp"
            android:layout_weight="1"
            app:cardElevation="6dp"
            android:id="@+id/successstorieshor"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/success"
                    android:layout_height="50dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Success Stories"
                    android:textColor="@color/colorAccent"
                    android:textStyle="normal"
                    android:textSize="15sp"   />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="60dp"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:onClick="onClick"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:id="@+id/hos"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/training"
                    android:layout_height="50dp"
                    />
                <TextView
                    android:id="@+id/hosname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="normal"
                    android:textSize="15sp"  />

            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:id="@+id/codeOfConduct"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/code"
                    android:layout_height="50dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Code Of Conduct"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="normal"
                    android:textSize="15sp"  />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>