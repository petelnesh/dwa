<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.dwakenya.techsavanna.newdwa.FirstPage">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        app:titleTextColor="@color/colorAccent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/homecarehublogo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:weightSum="2">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:id="@+id/hos"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/hosname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_owner_services"

                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="22sp"  />

            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="12dp"
            android:layout_weight="1"
            app:cardElevation="6dp"
            android:id="@+id/hor"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"

                android:background="@color/colorPrimary"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/horname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/home_owner_resources"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="22sp"   />

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:weightSum="2">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="12dp"
            android:layout_weight="1"
            app:cardElevation="6dp"
            android:id="@+id/eos"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="20dp"

                android:background="@color/colorPrimary"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/eorname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/home_assistance_services"
                    android:textColor="@color/colorAccent"

                    android:textStyle="bold"
                    android:textSize="22sp"  />

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="60dp"
        android:weightSum="2">


                <Button
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="Login"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:background="@color/colorPrimaryDark"
                    android:textSize="20sp" />



                <Button
                    android:id="@+id/signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="SignIn"
                    android:visibility="gone"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_weight="1"
                    android:textSize="20sp" />

            </LinearLayout>



</LinearLayout>