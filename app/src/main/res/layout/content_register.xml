<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dwakenya.techsavanna.newdwa.RegisterActivity"
    tools:showIn="@layout/activity_register">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <!--  First Name Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#000000">
                    <EditText android:id="@+id/input_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:backgroundTint="@color/colorAccent"
                        android:hint="First Name" />
                </android.support.design.widget.TextInputLayout>


                <!--  Last Name Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#000000">
                    <EditText android:id="@+id/input_lname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:backgroundTint="@color/colorAccent"
                        android:hint="Last Name" />
                </android.support.design.widget.TextInputLayout>


                <!--  ID Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#000000">
                    <EditText android:id="@+id/input_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:backgroundTint="@color/colorAccent"
                        android:hint="ID Number" />
                </android.support.design.widget.TextInputLayout>


                <!--  Phone Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#000000">
                    <EditText android:id="@+id/input_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:backgroundTint="@color/colorAccent"
                        android:hint="Phone" />
                </android.support.design.widget.TextInputLayout>


                <!-- Email Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#000000">
                    <EditText android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:backgroundTint="@color/colorAccent"
                        android:hint="Email" />
                </android.support.design.widget.TextInputLayout>


                <!-- County/ Town Label -->

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/sp_county_town"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:hintText="Select County/Town"
                    />


                <!-- Password Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#000000">
                    <EditText android:id="@+id/input_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:backgroundTint="@color/colorAccent"
                        android:hint="Password"/>
                </android.support.design.widget.TextInputLayout>


                <!-- Verify Password Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#000000">
                    <EditText android:id="@+id/input_vpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:backgroundTint="@color/colorAccent"
                        android:hint="Verify Password"/>
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Register as?"
                    android:textColor="@color/subtitle"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <android.support.v7.widget.AppCompatButton

                        android:id="@+id/btn_signupEmployee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:paddingLeft="36dp"
                        android:paddingStart="36dp"
                        android:paddingRight="36dp"
                        android:paddingEnd="36dp"
                        android:background="@drawable/rounded_border_edittext_filled"
                        android:padding="12dp"
                        android:text="Employee"
                        android:textColor="#ffffff" />


                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_signupEmployer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:paddingLeft="36dp"
                        android:paddingStart="36dp"
                        android:paddingRight="36dp"
                        android:paddingEnd="36dp"
                        android:background="@drawable/rounded_border_edittext"
                        android:padding="12dp"
                        android:text="Employer"
                        android:textColor="@color/colorAccent" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16dip"
                        android:text="Already a member?"
                        />
                    <TextView android:id="@+id/link_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dip"
                        android:text=" Login"
                        />

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>